#!/bin/bash

# File: data_extraction_automation-0x01
# Description: Extracts Pikachu's name, height, weight, and type from data.json

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "data.json not found. Try and fetch the data!"
    exit 1
fi

# Extract using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')                      # Capitalize
height_m=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}') # Convert decimetres to metres
weight_kg=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1 / 10}') # Convert hectograms to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')        # Capitalize

# Print formatted output
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."